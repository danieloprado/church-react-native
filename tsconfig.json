{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noEmitOnError": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "jsx": "react-native",
    "allowJs": true
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "bower_components"
  ]
}